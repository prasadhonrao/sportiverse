# Sportiverse Environment Configuration
# Copy this file to .env and update the values

# Required for deployment
# PayPal configuration (required)
export PAYPAL_CLIENT_ID="your-paypal-client-id-here"
export PAYPAL_APP_SECRET="your-paypal-app-secret-here"
export PAYPAL_API_URL="https://api-m.sandbox.paypal.com"
export JWT_SECRET="your-jwt-secret-here"

# Optional deployment configuration
export AZURE_RESOURCE_GROUP=""  # Leave empty for auto-generation: {APP_NAME}-rg-{ENVIRONMENT_NAME}
export AZURE_LOCATION="uksouth"
export ENVIRONMENT_NAME="dev"
export APP_NAME="sportiverse"
export APP_SERVICE_PLAN_SKU="B1"

# Azure subscription (optional - uses default if not set)
# export AZURE_SUBSCRIPTION_ID="your-subscription-id"
